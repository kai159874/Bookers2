<h1>Editing book</h1>
<%= form_with model: @book, local: true do |f| %>
   <div class="field">
    <%= f.label :title, "Title" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body, "Opinion" %><br />
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to "Show", url: book_path %>
<%= link_to "back", url: books_path %>