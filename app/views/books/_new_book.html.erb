<p>New book</p>
<%= form_with model: Book.new, url: books_path, method: :post, local: true do |f| %>
    <div class="field">
    <%= f.label :title, "Title" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body, "Opinion" %><br />
    <%= f.text_area :body %>
  </div>

    <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>
