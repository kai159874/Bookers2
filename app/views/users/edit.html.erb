<h1>User info</h1>
<%= form_with model: @user, local: true do |f| %>
  <div class="field">
    <%= f.label :image, "icon" %><br />
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :intro, "introduction" %><br />
    <%= f.text_area :intro %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>

<% end %>