<%= render "users/user_info", user: @user %>

<%= render "books/new_book" %>

<p>Users</p>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(100,100) %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.intro %></td>
        <td><%= link_to "show", user_path(user.id), method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>